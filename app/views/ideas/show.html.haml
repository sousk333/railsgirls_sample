- model_class = Idea
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @idea.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @idea.description
%p
  %strong= model_class.human_attribute_name(:picture) + ':'
  %br
  = image_tag(@idea.picture_url, width: 600) if @idea.picture.present?

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), ideas_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_idea_path(@idea), :class => 'btn btn-primary'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), idea_path(@idea), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
