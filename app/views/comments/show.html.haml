- model_class = Comment
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:user_name) + ':'
  %br
  = @comment.user_name
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @comment.body
%p
  %strong= model_class.human_attribute_name(:idea_id) + ':'
  %br
  = @comment.idea_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), comments_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_comment_path(@comment), :class => 'btn btn-primary'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), comment_path(@comment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
