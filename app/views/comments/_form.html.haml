= form_for @comment, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :user_name, :class => 'control-label col-sm-2'
    .col-sm-4= f.text_field :user_name, :class => 'form-control'
  .form-group
    = f.label :body, :class => 'control-label col-sm-2'
    .col-sm-8= f.text_area :body, :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-6
      = f.hidden_field :idea_id, :class => 'form-control'
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), comments_path, :class => 'btn btn-default'
